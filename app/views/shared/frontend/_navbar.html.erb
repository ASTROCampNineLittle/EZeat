<%# header %>
<div class="relative bg-orange-500 h-20">
  <div class="max-w-7xl h-20 mx-auto px-2 sm:px-6">
    <div class="flex justify-between items-center border-gray-100 py-6 md:justify-between md:space-x-10">
      <div class="flex justify-between lg:w-0 lg:flex-1">
        <div class="relative">
          <input class="border-2 border-primary bg-red transition h-8 px-2 pr-6 rounded-md focus:outline-none w-full text-black text-xs" type="search" name="search" placeholder="Search(按放大鏡)"/>
          <%= link_to search_path do %>
            <button type="submit" class="absolute right-3 top-3">
              <svg class="text-black h-3 w-3 fill-current" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" version="1.1" id="Capa_1" x="0px" y="0px" viewBox="0 0 56.966 56.966" style="enable-background:new 0 0 56.966 56.966;" xml:space="preserve" width="512px" height="512px">
                <path d="M55.146,51.887L41.588,37.786c3.486-4.144,5.396-9.358,5.396-14.786c0-12.682-10.318-23-23-23s-23,10.318-23,23  s10.318,23,23,23c4.761,0,9.298-1.436,13.177-4.162l13.661,14.208c0.571,0.593,1.339,0.92,2.162,0.92  c0.779,0,1.518-0.297,2.079-0.837C56.255,54.982,56.293,53.08,55.146,51.887z M23.984,6c9.374,0,17,7.626,17,17s-7.626,17-17,17  s-17-7.626-17-17S14.61,6,23.984,6z" />
              </svg>
            </button>
          <% end %>
        </div>
        <div class="w-24">
          <img src="https://by3301files.storage.live.com/y4mzjoap9d2rbMvwtVEWPkWuVfu8dPIk2SqMiC08ssWXyDUvlf4R5NOxcmQMUyfVMG8z-80kuXDKVbFTfn2xDqNVE4lmPuMHsa6HxzNpOLveaF4tjqaa9kXVrqLFy1-e-_UZH2OQWXWpHm5tGBUVMBr6RVRRhXEm8xj8aAb402btqe89l9IqHMmFBjpF171pN9D6YbfZtzWrxjzClrj5vWzWw/EZeat2.png?psid=1&width=1149&height=430">
        </div>
      </div>
      <div class="w-36 hidden md:flex items-center justify-end md:flex-1 lg:w-0">
        <% if signed_in? %>
        <div class="whitespace-nowrap text-base font-medium text-gray-500 bg-yellow-200 hover:text-gray-900 p-2 m-1 rounded-md">
          <%= current_user.name %>，您好
        </div>
        <div class="whitespace-nowrap text-base font-medium text-gray-500 bg-white hover:text-gray-900 p-2 m-1 rounded-md">
          <%= link_to "個人檔案", edit_user_registration_path %>
        </div>
        <div class="whitespace-nowrap text-base font-medium text-gray-500 bg-white hover:text-gray-900 p-2 m-1 rounded-md">
          <%= button_to "登出", destroy_user_session_path, method: 'delete', notice: "登出成功" %>
        </div>
        <% else %>
        <div class="whitespace-nowrap text-base font-medium text-gray-500 bg-white hover:text-gray-900 p-2 m-1 rounded-md">
          <%= link_to "登入", user_session_path %>
        </div>
        <div class="whitespace-nowrap text-base font-medium text-gray-500 bg-white hover:text-gray-900 p-2 m-1 rounded-md">
          <%= link_to "註冊", new_user_registration_path %>
        </div>
        <% end %>
      </div>

      <nav class="md:mr-auto">

        <div class="relative inline-block text-left">
          <div>
            <button type="button" class="inline-flex justify-center w-full rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-orange-200" id="menu-button" aria-expanded="true" aria-haspopup="true">
              導覽
              <!-- Heroicon name: solid/chevron-down -->
              <svg class="-mr-1 ml-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>

          <!--
            Dropdown menu, show/hide based on menu state.

            Entering: "transition ease-out duration-100"
              From: "transform opacity-0 scale-95"
              To: "transform opacity-100 scale-100"
            Leaving: "transition ease-in duration-75"
              From: "transform opacity-100 scale-100"
              To: "transform opacity-0 scale-95"
          -->
          <div class="origin-top-right absolute right-0 mt-2 w-56 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 focus:outline- z-10" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
            <div class="py-1" role="none">
              <!-- Active: "bg-gray-100 text-gray-900", Not Active: "text-gray-700" -->
              <div class="text-gray-700 block px-2 py-2 mx-2 text-sm hover:bg-gray-100 hover:rounded-md" role="menuitem" tabindex="-1" id="menu-item-0">
                <%= link_to "首頁", root_path %>
              </div>
              <div class="text-gray-700 block px-2 py-2 mx-2 text-sm hover:bg-gray-100 hover:rounded-md" role="menuitem" tabindex="-1" id="menu-item-1">常見問題</div>
              <div class="text-gray-700 block px-2 py-2 mx-2 text-sm hover:bg-gray-100 hover:rounded-md" role="menuitem" tabindex="-1" id="menu-item-1">
                <%= link_to "餐廳合作", root_path %>
              </div>
              <div class="text-gray-700 block px-2 py-2 mx-2 text-sm hover:bg-gray-100 hover:rounded-md" role="menuitem" tabindex="-1" id="menu-item-2">部落格文章</div>
            </div>
          </div>
        </div>


  
      </nav>
      
    </div>
  </div>
</div>
