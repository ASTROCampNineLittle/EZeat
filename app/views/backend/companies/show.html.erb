<div class='w-full max-w-sm'>
  <div class="md:flex md:items-center mb-6">
    <div class=" ">
     <h1 class='block text-gray-500 font-bold text-2xl md:text-right mb-1 md:mb-0 pr-4'>公司資料</h1>
    </div>
  </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <p class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'>公司名稱 </p>
      </div>
      <div class="md:w-2/3 bg-white-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        <%=  @company.name %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <p class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'>公司地址 </p>
      </div>
      <div class="md:w-2/3 bg-white-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        <%= @company.address %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <p class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'>聯絡電話</p>
      </div>
      <div class="md:w-2/3 bg-white-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        <%= @company.tel %>
      </div>
    </div>

    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3">
        <p class='block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4'>負責人姓名 </p>
      </div>
      <div class="md:w-2/3 bg-white-100 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500">
        <%= @company.manager_name%>
      </div>
    </div>

    <div class="md:flex mb-6 justify-end">
      <div class="md:w-1/2">
        <%= link_to new_backend_company_store_path(@company), class: 'bg-red-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' do %>
          新增分店
        <% end %>
      </div>

      <div class=" ">
        <%= link_to edit_backend_company_path(@company), class: 'bg-red-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline' do %>
            修改資料
        <% end %>
      </div>
    </div>
</div>

