<div class='w-full'>
  <div class="md:flex md:items-center mb-6">
    <div class=" ">
        <h1 class='block text-black-500 text-3xl font-bold md:text-right mb-1 md:mb-0 pr-4'>編輯公司資訊</h1>
    </div>
  </div>

    <div class="md:grid md:gap-6 ">
      <div class="mt-5 md:mt-0 ">
        <%= form_with model: [:backend, @company], class: " " do |form| %>
          <div class="shadow sm:rounded-md sm:overflow-hidden">
            <div class="px-4 py-5 bg-white space-y-6 sm:p-6">
              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2">
                  <%= form.label :name, '公司名稱', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :name, class:"focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300"%>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2">
                  <%= form.label :address, '公司地址', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :address, class:"focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" %>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2">
                  <%= form.label :tel, '公司電話', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :tel, class:"focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300" %>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2">
                  <%= form.label :manager_name, '負責人姓名', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :manager_name, class:"focus:ring-indigo-500 focus:border-indigo-500 flex-1 block w-full rounded-none rounded-r-md sm:text-sm border-gray-300"%>
                  </div>
                </div>
              </div>

            </div>
            <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
              <%= form.submit value="更新資料", class:"inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>

              <%= link_to "取消", backend_company_path(@company), class:"inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500" %>              
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>