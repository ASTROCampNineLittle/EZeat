<div class='w-8/12 mx-auto my-10'>
  <div class="mb-6">
    <h1 class="block text-black-500 text-3xl font-bold text-center tracking-widest">編輯公司資訊</h1>
  </div>

    <div class="md:grid md:gap-6 ">
      <div class="mt-5 md:mt-0 ">
        <%= form_with model: [:backend, @company], class: " " do |form| %>
          <div class="shadow sm:rounded-md sm:overflow-hidden">
            <div class="px-8 py-5 bg-white sm:p-6">

              <div class="grid grid-cols-3 gap-6 w-full">
                <div class="col-span-3 w-full py-3 pb-5">
                  <%= form.label :name, '公司名稱', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :name, class:"focus:ring-blue-500 focus:bg-blue-50 block w-full h-10 rounded-md text-md border border-gray-300"%>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6 w-full">
                <div class="col-span-3 w-full py-3 pb-5">
                  <%= form.label :address, '公司地址', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :address, class:"focus:ring-blue-500 focus:bg-blue-50 block w-full h-10 rounded-md text-md border border-gray-300" %>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6 w-full">
                <div class="col-span-3 w-full py-3 pb-5">
                  <%= form.label :tel, '公司電話', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :tel, class:"focus:ring-blue-500 focus:bg-blue-50 block w-full h-10 rounded-md text-md border border-gray-300" %>
                  </div>
                </div>
              </div>

              <div class="grid grid-cols-3 gap-6 w-full">
                <div class="col-span-3 w-full py-3 pb-5">
                  <%= form.label :manager_name, '負責人姓名', class:"block text-sm font-medium text-gray-700"%>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :manager_name, class:"focus:ring-blue-500 focus:bg-blue-50 block w-full h-10  rounded-md text-md border border-gray-300"%>
                  </div>
                </div>
              </div>

            </div>
            <div class="px-6 py-6 bg-gray-50 text-right">
              <%= form.submit value="更新資料", class:"inline-flex justify-center py-4 px-6 border border-transparent shadow-sm text-md font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>

              <%= link_to "取消", backend_company_path(@company), class:"inline-flex justify-center py-4 px-6 border border-transparent shadow-sm text-md font-medium rounded-md text-white bg-gray-600 hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 ml-5" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>