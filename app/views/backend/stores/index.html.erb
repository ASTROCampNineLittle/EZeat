<span class="flex text-xl">
  <div class="mr-4">公司：<%= @company.name %></div>
  <div class="mr-4">聯絡電話：<%= @company.tel%></div>
  <div class="mr-4">負責人：<%= @company.manager_name%></div>
</span>

<h2>分店清單</h2>
<!-- component -->
<table class="min-w-full border-collapse block md:table">
		<thead class="block md:table-header-group">
			<tr class="border border-gray-500 md:border-none block md:table-row absolute -top-full md:top-auto -left-full md:left-auto  md:relative ">
				<th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">查看目前方案</th>
        <th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">分店名稱</th>
				<th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">餐飲類型</th>
        <th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">電話</th>
        <th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">分店地址</th>
				<th class="bg-gray-600 p-2 text-white font-bold md:border md:border-gray-500 text-left block md:table-cell">編輯分店資訊</th>
			</tr>
		</thead>
		<tbody class="block md:table-row-group">
      <% @stores.each do |store| %>
        <tr class="bg-white-300 border border-gray-500 md:border-none block md:table-row">
          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell"><span class="inline-block w-1/3 md:hidden font-bold">查看方案</span>
            <%= link_to "查看分店方案", backend_store_dishes_path(store),method: 'get', class:"bg-green-500 hover:bg-green-700 text-white font-bold py-1 px-2 border border-green-500 rounded"  %>
          </td>
          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell"><span class="inline-block w-1/3 md:hidden font-bold">分店名稱</span><%= store.name %></td>
          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell"><span class="inline-block w-1/3 md:hidden font-bold">餐飲類型</span><%= store.food_type %></td>
          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell"><span class="inline-block w-1/3 md:hidden font-bold">電話</span><%= store.tel %></td>
          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell"><span class="inline-block w-1/3 md:hidden font-bold">分店地址</span><%= store.address %></td>

          <td class="p-2 md:border md:border-gray-500 text-left block md:table-cell">
            <span class="inline-block w-1/3 md:hidden font-bold">Actions</span>
            <%= link_to "修改資料", edit_backend_store_path(store), class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 border border-blue-500 rounded"%>
            <%= link_to "刪除分店", backend_store_path(store), method: :delete, data: { confirm: "Are you sure?" }, class:"bg-red-500 hover:bg-red-700 text-white font-bold py-1 px-2 border border-red-500 rounded"  %>
          </td>
        </tr>
      <% end %>
	</tbody>
</table>

<%= link_to "新增分店", new_backend_company_store_path(@company),
class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 border border-blue-500 rounded"%>

<%= link_to "編輯公司資料", edit_backend_company_path(@company),
class:"bg-blue-500 hover:bg-blue-700 text-white font-bold py-1 px-2 border border-blue-500 rounded" %>
