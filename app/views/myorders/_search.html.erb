<% @orders_result.each do |orders| %>
	<%= link_to myorder_path(orders) do %>

		<div class="md:flex items-center text-sm hover:bg-orange-300 text-center text-gray-900 border border-dashed border-orange-50 rounded-sm mb-3 mx-3">
			<% if orders.ticket === "未使用" %>
				<div class="p-2 md:w-2/12">
					<span class="relative inline-block px-3 py-1 font-semibold text-green-900 leading-tight">
						<span aria-hidden class="absolute inset-0 bg-green-200 opacity-50 rounded-full"></span>
						<span class="relative">
							<%= orders.ticket %>
						</span>
					</span>
				</div>
			<% elsif orders.ticket === "已核銷" %>
				<div class="p-2 md:w-2/12">
					<span class="relative inline-block font-semibold text-red-900 leading-tight px-3 py-1">
						<span aria-hidden class="absolute inset-0 bg-red-200 opacity-50 rounded-full"></span>
						<span class="relative">
							<%= orders.ticket %>
						</span>
					</span>
				</div>
			<% else orders.ticket === nil %>
				<div class="p-2 md:w-2/12">
					<span class="relative inline-block font-semibold text-white leading-tight px-3 py-1">
						<span aria-hidden class="absolute inset-0 bg-gray-400 opacity-50 rounded-full"></span>
						<span class="relative">
							未付款
						</span>
					</span>
				</div>
			<% end %>

			<div class="p-2 md:w-4/12">
				<p class="whitespace-no-wrap text-lg text-orange-500">
					<%= orders.open_date.dish.store.name %>
				</p>
			</div>
			<div class="p-2 md:w-3/12">
				<p class="whitespace-no-wrap">
					<%= orders.order_dish %>
				</p>
			</div>
			<div class="p-2 md:w-3/12">
				<p class="whitespace-no-wrap text-orange-500">
					<%= orders.order_date %>
				</p>
			</div>
		</div>

	<% end %>
<% end %>