<%= stylesheet_link_tag "rollbar.css" %>

<h1 class="flex justify-center py-5 lg:px-20 md:px-10 px-5 lg:mx-40 md:mx-20 mx-5 font-bold text-4xl text-gray-800">
  中式美饌
</h1>

<!-- Swiper -->
<div class="swiper mySwiper">
  <div class="swiper-wrapper">
          <% @foodtype0_stores.last(9).each do |store| %>
          <div class="inline-block swiper-slide">
            <div class="w-full h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
              <%= link_to store_path(store) do %>
                <div class="object-cover h-40">
                  <%= image_tag store.image_url if store.image_url.present? %>
                </div>
                <div class="text-lg font-bold"><%= store.name %></div>
                <!-- 用truncate helper 限制最多顯示的字元 -->
                <div class="text-sm text-gray-500 px-3"><%= truncate(store.intro, :length => 50) %></div>
              <% end %>
            </div>
          </div>
        <% end %>
  </div>
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
  <div class="swiper-pagination"></div>
</div>

