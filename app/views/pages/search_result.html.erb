
<section class="antialiased text-gray-600 w-full m-auto my-10">
	<div class="flexjustify-center h-full">
		<!-- Table -->
			<div class="w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">
				<div class="px-2 py-4 border-b border-gray-100">
					<div class="font-semibold text-gray-800">
						<%= search_form_for @q, url: search_result_pages_path do |f| %>
						<div class="flex justify-between">
							<div class="mx-1">
								<%= f.label :store_name_cont, "餐廳名稱", class: "text-xs font-semibold text-gray-600 block" %>
								<%= f.search_field :store_name_cont, placeholder: "請輸入餐廳名稱", class: "mt-1 p-2 text-gray-700 text-xs bg-gray-200  focus:outline-none focus:bg-orange-100 focus:shadow-inner rounded" %>
							</div>
							<div class="mx-1 w-6/12">
								<%= f.label :store_address_cont_any, "餐廳地址", class: "text-xs font-semibold text-gray-600 block" %>
        				<%= f.search_field :store_address_cont_any, placeholder: "搜尋餐廳地址", class: "w-full mt-1 p-2 text-gray-700 text-xs bg-gray-200 focus:outline-none focus:bg-orange-100 focus:shadow-inner rounded" %>
							</div>
							<div class="mx-1 w-2/12">
								<%= f.label :store_food_type_eq, "餐廳類型", class: "text-xs font-semibold text-gray-600 block" %>
        				<%= f.select :store_food_type_eq, Store.food_types.to_a.map { |w| [w[0].humanize, w[1]] }, {include_blank: true}, class: "w-full mt-1 p-2 text-gray-700 text-xs bg-gray-200 focus:outline-none focus:bg-orange-100 focus:shadow-inner rounded" %>
							</div>
							<div class="mx-1 w-2/12">
								<%= f.label :open_dates_availible_date, "預定日期", class: "text-xs font-semibold text-gray-600 block" %>
        				<%= f.search_field :open_dates_availible_date, placeholder: "日期", class: "w-full mt-1 p-2 text-gray-700 text-xs bg-gray-200 focus:outline-none focus:bg-orange-100 focus:shadow-inner rounded" %>
							</div>
							<div class="mx-1 w-1/12">
								<%= f.submit "搜尋", class: "w-full p-2 mt-5 text-xs font-medium tracking-widest text-white uppercase bg-yellow-500 shadow-md focus:outline-none hover:bg-yellow-600 hover:shadow-none rounded-lg" %>
							</div>
						<% end %>
						</div>
					</div>
				</div>
			<div class="p-3 w-full">
				<div class="flex text-xs text-center font-semibold text-gray-700 bg-gray-50">
					<div class="w-3/12 p-2">
						<%= sort_link(@q, :store_name_cont, "餐廳名稱", { class: "" })%>
					</div>
					<div class="w-1/12 p-2">
						<%= sort_link(@q, :store_food_type_eq, "類型", { class: "" })%>
					</div>
					<div class="w-2/12 p-2">
						<div class="f">日期</div>
					</div>
					<div class="w-4/12 p-2">
						<div class="f">時間</div>
					</div>
					<div class="w-2/12 p-2">
						<%= sort_link(@q, :store_address_cont_any, "餐廳地址", { class: "" })%>
					</div>
				</div>

				<% @search_result.each do |dish| %>
					<% dish.open_dates.each do |date| %>
				<div class="text-sm font-medium hover:bg-orange-100">
					<%= link_to(store_path(dish.store.id)) do %>
					<div class="flex">
						<div class="w-3/12 p-2 text-gray-800">
							<%= dish.store.name %>
						</div>
						<div class="w-1/12 p-2 text-gray-800 text-center">
							<%= dish.store.food_type %>
						</div>
						<div class="w-2/12 p-2 text-center">
							<%= date.availible_date %>
						</div>
						<div class="flex w-4/12 p-2">
							<% date.offers.take(3).each do |time| %>
								<button type="submit" class="w-full mx-1 text-yellow-500 bg-white shadow-lg focus:outline-none hover:bg-yellow-500 hover:text-white hover:shadow-none rounded-lg">
									<div><%= time.availible_time.strftime("%H:%M") %></div>
								</button>
								<% end %>
						</div>
						<div class="w-2/12 p-2 text-left text-orange-500 text-xs">
							<%= dish.store.address %>
						</div>
					</div>
					<% end %>
				</div>
					<% end %>
				<% end %>
			</div>
			</div>
		</div>
	</div>
</section>
