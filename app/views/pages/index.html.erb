<%# banner %>


<div class="absolute z-50 pt-20 h-128 px-20">
  <!-- component -->
  <%= render 'pages/search' %>
</div>


<div class="h-128">
  <img class="h-full" src="/image/cover.jpg" alt="">
<div>

<%# 關於餐廳 %>
<div class="w-full h-full mb-10 pt-10">
  <h2 class="text-center pb-5 px-5 mx-5 font-bold text-4xl text-gray-800">
    精選餐廳
  </h2>

  <div class=" h-full m-auto">
    <%# 精選餐廳 %>
    <div class="w-11/12 m-auto p-8 border border-gray-300 rounded-md my-5 shadow-xl">
      <div class="md:flex md:flex-wrap mt-3 ">
        <% @stores.last(9).each do |store| %>
          <div class="sm:w-full sm:p-0 md:w-1/3 md:p-3 mt-5">
            <%= link_to store_path(store) do %>
              <div class="">
                <%= image_tag store.image_url, class:"object-cover h-48 w-full" if store.image_url.present? %>
              </div>
              <div class="text-lg font-bold"><%= store.name %></div>
              <!-- 用truncate helper 限制最多顯示的字元 -->
              <div class="text-sm text-gray-500"><%= truncate(store.intro, :length => 110) %></div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="w-11/12 h-full m-auto">
    <div class="flex flex-col bg-white m-auto p-auto">
      <h1 class="flex justify-center py-5 lg:px-20 md:px-10 px-5 lg:mx-40 md:mx-20 mx-5 font-bold text-4xl text-gray-800">
        中式美饌
      </h1>


      <div class="index-scroll">
        <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10">
            <% @foodtype0_stores.first(9).each do |store| %>
              <div class="inline-block px-3">
                <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
                  <%= link_to store_path(store) do %>
                    <div class="">
                      <%= image_tag store.image_url if store.image_url.present? %>
                  </div>
                    <div class="text-lg font-bold"><%= store.name %></div>
                    <!-- 用truncate helper 限制最多顯示的字元 -->
                    <div class="text-sm text-gray-500"><%= truncate(store.intro, :length => 110) %></div>
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="inline-block px-3">
              <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>

    <div class="flex flex-col bg-white m-auto p-auto">
      <h1 class="flex justify-center py-5 lg:px-20 md:px-10 px-5 lg:mx-40 md:mx-20 mx-5 font-bold text-4xl text-gray-800">
        日式料理
      </h1>

      <div class="index-scroll">
        <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
          <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 " >
            <% @foodtype1_stores.last(9).each do |store| %>
              <div class="inline-block px-3">
                <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
                  <%= link_to store_path(store) do %>
                    <div class="">
                      <%= image_tag store.image_url if store.image_url.present? %>
                  </div>
                    <div class="text-lg font-bold"><%= store.name %></div>
                    <!-- 用truncate helper 限制最多顯示的字元 -->
                    <div class="text-sm text-gray-500"><%= truncate(store.intro, :length => 110) %></div>
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="inline-block px-3">
              <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="flex flex-col bg-white m-auto p-auto">
    <h1 class="flex justify-center py-5 lg:px-20 md:px-10 px-5 lg:mx-40 md:mx-20 mx-5 font-bold text-4xl text-gray-800">
      韓式料理
    </h1>

    <div class="index-scroll">
      <div class="flex overflow-x-scroll pb-10 hide-scroll-bar">
        <div class="flex flex-nowrap lg:ml-40 md:ml-20 ml-10 " >
          <% @foodtype2_stores.each do |store| %>
            <div class="inline-block px-3">
              <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
                <%= link_to store_path(store) do %>
                  <div class="">
                    <%= image_tag store.image_url if store.image_url.present? %>
                </div>
                  <div class="text-lg font-bold"><%= store.name %></div>
                  <!-- 用truncate helper 限制最多顯示的字元 -->
                  <div class="text-sm text-gray-500"><%= truncate(store.intro, :length => 110) %></div>
                <% end %>
              </div>
            </div>
          <% end %>
          <div class="inline-block px-3">
            <div class="w-64 h-64 max-w-xs overflow-hidden rounded-lg shadow-md bg-white hover:shadow-xl transition-shadow duration-300 ease-in-out" >
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
