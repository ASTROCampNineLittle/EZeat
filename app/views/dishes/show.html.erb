<div class="bg-gray-100 max-w-screen-md container mx-auto pb-4">
  <div class="px-4 py-10">
    <div class="flex pb-3 -mx-0.5">
      <div class="flex-1">
				<div class="w-10 h-10 bg-red-400 border-2 border-red-400 mx-auto rounded-full text-xl text-white flex items-center">
					<span class="text-center w-full font-bold">1</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-gray-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-gray-400 mx-auto rounded-full text-lg text-gray-400 flex items-center">
					<span class="text-center w-full">2</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-gray-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-gray-400 mx-auto rounded-full text-lg text-gray-400 flex items-center">
					<span class="text-center w-full">3</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-gray-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-gray-400 mx-auto rounded-full text-lg text-gray-400 flex items-center">
					<span class="text-center w-full">4</span>
				</div>
			</div>
		</div>
		<div class="flex text-lg content-center text-center py-1 tracking-widest">
			<div class="w-1/4 text-sm text-red-500">選擇日期</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-gray-500">選擇時間<br>及人數</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-gray-500">確認<br>訂位資訊</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-gray-500">確認<br>訂單結果</div>
		</div>
	</div>

	<section class=" w-full container mx-auto drop-shadow-lg">
		<div class="shadow-lg mb-10">
			<div class="text-left text-2xl font-medium border-gray-400 pl-8 bg-white py-5 border-b-4"><%= @store.name %></div>
			<div class="flex items-center justify-between bg-green-100 pl-8 py-2 border-b-2 border-green-200">
				<h3 class="flex text-left text-lg font-light pl-0.5">
					<svg class="h-6 w-6 text-black pt-1"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  	stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
					<div class="pl-2">餐券：<%= @dish.name %></div>
				</h3>
				<span class="text-red-500 text-3xl pr-8 font-bold">＄<%= @dish.price.to_s.gsub(/(\d)(?=(\d{3})+$)/,'\1,') %></span>
			</div>
			<div class="flex text-left text-lg font-medium border-b-4 border-gray-400 pl-8 bg-white py-3 mb-4">
				<div class="pt-1 pl-1">
					<svg class="h-5 w-5 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"  stroke-linejoin="round"><circle cx="12" cy="12" r="10"/></svg>
				</div>
				<div class="pl-2.5 text-red-500">日期：請選擇日期</div>
			</div>
		</div>

		<div class="mx-auto w-11/12">
			<div class="flex flex-wrap justify-start ">
				<% @dish.open_dates.order(availible_date: :asc).each do |open_date| %>
					<% if open_date.availible_date >= DateTime.current.to_date %>
							<%= link_to(store_dish_open_date_path(id: open_date, dish_id: @dish, store_id: @store), class:"m-2 text-white text-sm py-2.5 px-5 rounded-md border-b-4 border-orange-600 bg-orange-500 hover:bg-orange-400 w-1/10 inline-block") do %>
							<%= open_date.availible_date %>
							<% end %>
						<% end%>
					<% end %>
			</div>
		</div>
	</section>

		<div class="flex flex-row-reverse mr-6 my-10"><%= link_to "↻ 返回前頁改選", :back , class:'text-sm text-gray-500 hover:underline hover:text-orange-500'%></div>

</div>