<div class="bg-gray-100 max-w-screen-md container mx-auto pb-10">
	<div class="px-4 py-10">
    <div class="flex pb-3 -mx-0.5">
      <div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-green-400 mx-auto rounded-full text-xl text-green-400 flex items-center">
					<span class="text-center w-full">1</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-green-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-green-400 mx-auto rounded-full text-xl text-green-400 flex items-center">
					<span class="text-center w-full">2</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-green-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-green-400 mx-auto rounded-full text-xl text-green-400 flex items-center">
					<span class="text-center w-full">3</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-green-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-green-400 border-2 border-green-400 mx-auto rounded-full text-xl text-white flex items-center">
					<span class="text-center w-full font-bold">4</span>
				</div>
			</div>
		</div>
		<div class="flex text-lg content-center text-center py-1 tracking-widest">
			<div class="w-1/4 text-sm text-green-600">選擇日期</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-green-600">選擇時間<br>及人數</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-green-600">確認<br>訂位資訊</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-green-600">確認<br>訂單結果</div>
		</div>
	</div>

	<h3 class="bg-orange-100 text-black text-4xl py-14 pl-6 border-b-2 text-center ">交易結果：
		<% if @response.status === "SUCCESS"%>
		<%= "😉 購買票券成功！" %>
		<% else %>
		<%= "😕 購買票券失敗！" %><br>
		<span class="py-2 inline-block"><%= @response.message %></span>
		<% end%>
	</h3>

	<div class="flex flex-between text-lg bg-gray-300 py-1.5">
		<h3 class="bg-gray-300 text-black py-3 pl-8 flex-grow text-xl font-semibold inline-block tracking-widest">購買明細</h3>
		<button class="bg-orange-500 hover:bg-orange-700 rounded-lg mr-8">
			<%= link_to "查看我的票券", myorders_path,
			class:'text-white text-lg py-2 px-5 hover:underline inline-block text-center'%>
		</button>
	</div>
	<section class="w-full container mx-auto drop-shadow-lg">
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				　餐　　券　：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.order_dish %>
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				　日　　期　：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.order_date %>
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				　時　　間　：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.order_time.to_datetime.strftime("%H:%M") %>
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				　人　　數　：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.order_people %>
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center tracking-widest">
				 交  易  金  額 ：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.newebpay_amount %> 元
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				藍新交易時間：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.newebpay_time %>
			</div>
		</div>
		<div class="md:flex md:items-center font-base border-b-2 border-orange-500 px-8 bg-white py-3">
			<div class="md:w-4/12 text-sm block text-gray-500 font-bold pr-2 text-center">
				信用卡前六碼：
			</div>
			<div class="md:8/12 text-lg text-center">
				<%= @order.newebpay_card6no %>
			</div>
		</div>
	</section>
</div>