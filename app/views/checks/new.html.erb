<div class="bg-gray-100 max-w-screen-xl container mx-auto pb-4">
	<div class="px-4 py-10">
    <div class="flex pb-3 -mx-0.5">
      <div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-green-400 mx-auto rounded-full text-xl text-green-400 flex items-center">
					<span class="text-center w-full">1</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-green-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-green-400 mx-auto rounded-full text-xl text-green-400 flex items-center">
					<span class="text-center w-full">2</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-green-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-red-400 border-2 border-red-400 mx-auto rounded-full text-lg text-white flex items-center">
					<span class="text-center w-full font-bold">3</span>
				</div>
			</div>
			<div class="w-1/6 align-center items-center align-middle content-center flex">
				<div class="w-full rounded items-center align-middle align-center flex-1">
					<div class="bg-gray-400 text-xs leading-none py-0.5 text-center rounded " style="width: 100%"></div>
				</div>
			</div>
			<div class="flex-1">
				<div class="w-10 h-10 bg-white border-2 border-gray-400 mx-auto rounded-full text-lg text-gray-400 flex items-center">
					<span class="text-center w-full">4</span>
				</div>
			</div>
		</div>
		<div class="flex text-lg content-center text-center py-1 tracking-widest">
			<div class="w-1/4 text-sm text-green-600">選擇日期</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-green-600">選擇時間<br>及人數</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-red-500">確認<br>訂位資訊</div>
			<div class="w-1/3 align-center items-center align-middle content-center flex"></div>
			<div class="w-1/4 text-sm text-gray-500">確認<br>訂單結果</div>
		</div>
	</div>

	<section class=" w-full container mx-auto drop-shadow-lg">
		<div class="shadow-lg bb-10">
			<div class="text-left text-2xl font-medium border-gray-500 pl-8 bg-white py-5 border-b-4"><%= @store.name %></div>
			<div class="flex items-center justify-between bg-green-100 pl-8 py-2 border-b-2 border-green-200">
				<h3 class="flex text-left text-lg font-light pl-0.5">
					<svg class="h-6 w-6 text-black pt-1" viewBox="0 0 24 24" fill="none" stroke="currentColor"  stroke-width="2"	stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
					<div class="pl-2">餐卷：<%= params[:order_dish] %></div>
				</h3>
				<span class="text-gray-700 text-3xl pr-8 font-bold">＄<%= @dish_price_commify %></span>
			</div>
			<div class="flex text-left text-lg font-light border-b-2 border-green-200 pl-8 bg-green-100 py-3">
				<div class="pl-0.5">
					<svg class="h-6 w-6 text-black pt-1"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  	stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
				</div>
				<div class="pl-2 text-black">日期：<%= params[:order_date] %></div>
			</div>
			<div class="flex text-left text-lg font-light border-b-2 border-green-200 pl-8 bg-green-100 py-3">
				<div class="pl-0.5">
					<svg class="h-6 w-6 text-black pt-1"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  	stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
				</div>
				<div class="pl-2 text-black">時間：<%= params[:order_time].to_datetime.strftime("%H:%M") %></div>
			</div>
			<div class="flex text-left text-lg font-light border-b-2 border-green-200 pl-8 bg-green-100 py-3">
				<div class="pl-0.5">
					<svg class="h-6 w-6 text-black pt-1"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  	stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
				</div>
				<div class="pl-2 text-black">人數：<%= params[:order_people] %></div>
			</div>
			<div class="flex text-left text-lg font-medium border-b-4 border-gray-500 pl-8 bg-white py-3 items-center justify-between">
				<h3 class="flex text-red-500">
					<div class="pt-1 pl-1">
						<svg class="h-5 w-5 text-red-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round"  stroke-linejoin="round"><circle cx="12" cy="12" r="10"/></svg>
					</div>
					<div class="pl-2.5">總額：＄<%= params[:order_price] %>　Ｘ　<%= params[:order_people] %> 人　＝　</div>
				</h3>
				<span class="text-red-500 text-3xl pr-8 font-bold">＄<%= @ezeat_amount_commify %></span>
			</div>
		</div>

		<h3 class="bg-orange-300 text-black text-lg py-3 text-center border-b-2 tracking-widest my-10">填寫訂位資訊</h3>

		<%= form_with model: @order , url:checks_path, method: "post" do |form| %>
			<div class="md:flex md:items-center">
				<div class="md:w-1/6">
					<%= form.label :name, '訂位人', class: 'block text-gray-500 font-bold md:text-right mb-1 pr-4' %>
				</div>
				<div class="md:w-9/12">
					<%= form.text_field :name, value: @user.name,class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-500' %>
				</div>
			</div>

			<div class="md:flex md:items-center my-6">
				<div class="md:w-1/6">
					<%= form.label :tel, '電　話', class: 'block text-gray-500 font-bold md:text-right mb-1 pr-4' %>
				</div>
				<div class="md:w-9/12">
					<%= form.text_field :tel, value: @user.tel, class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-500' %>
				</div>
			</div>

			<div class="md:flex md:items-center">
				<div class="md:w-1/6">
					<%= form.label :email, 'E-mail', class: 'block text-gray-500 font-bold md:text-right mb-1 pr-4' %>
				</div>
				<div class="md:w-9/12">
					<%= form.text_field :email, value: @user.email, class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-orange-500' %>
				</div>
			</div>
			<%= form.hidden_field :user_email, value: @user.email %>
			<%= form.hidden_field :user_id, value: @user.id %>
			<%= form.hidden_field :open_date_id, value: params[:open_date_id] %>
			<%= form.hidden_field :store_id, value: params[:store_id] %>
			<%= form.hidden_field :order_dish, value:	params[:order_dish] %>
			<%= form.hidden_field :order_number, value: @ezeat_random_number %>
			<%= form.hidden_field :order_date, value: params[:order_date] %>
			<%= form.hidden_field :order_time, value: params[:order_time] %>
			<%= form.hidden_field :order_people, value:	params[:order_people] %>
			<%= form.hidden_field :ezeat_amount, value:	@ezeat_amount %>

			<div class="my-10 mx-8 ml-16">
				<div class="flex w-full justify-center">
					<%= form.submit value="送 出 資 料。進 入 信 用 卡 付 款 頁 面", class:"text-white text-base py-2.5 border-b-4 border-orange-600 rounded-md bg-orange-500 hover:bg-orange-400 w-full tracking-widest cursor-pointer" %>
					<div class="relative right-36 top-1.5">
						<svg class="h-8 w-8 text-white z-10"  fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"/>
						</svg>
					</div>
				</div>
			</div>
		<% end %>
	</section>

		<div class="flex flex-row-reverse mr-6 my-10"><%= link_to "↻ 返回前頁改選", :back , class:'text-sm text-gray-500 hover:underline hover:text-orange-500'%></div>

</div>