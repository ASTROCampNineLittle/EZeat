<%= stylesheet_link_tag "spinner.css" %>

<section class="text-gray-600 body-font">
  <div class="container mx-auto flex py-12 items-center justify-center flex-col">
    <h2 class="my-2 text-3xl font-extrabold text-gray-900">
      <%= t 'common.navigation.profile' %>
    </h2>
    <%= image_tag "https://ezeat.s3.ap-northeast-1.amazonaws.com/profile_pics/snack#{rand(1..5)}.png", class: "spinner lg:w-2/6 md:w-3/6 sm:w-3/6 my-10 object-cover object-center rounded" %>
    <div class="text-center lg:w-2/3 w-full">
      <h1 class="title-font sm:text-4xl text-3xl mb-4 font-medium text-gray-900 font-mono">
        <%= t(current_user.name) %>
      </h1>
        <% if !current_user.last_sign_in_at.nil? %>
          <p class="mb-8 leading-relaxed">
            <%= t 'devise.profile.welcome' %>
            <%= current_user.last_sign_in_at.strftime("%Y-%m-%d") %>
        <% else %>
            <%= t 'devise.profile.welcome_registered' %>
          </p>
        <% end %>
      <div class="flex justify-center">
        <%= link_to(t('devise.profile.edit'), edit_user_registration_path, class: "ml-4 inline-flex text-gray-700 bg-gray-100 border-0 py-2 px-6 focus:outline-none hover:bg-orange-200 rounded text-lg") %>
        <% if current_user.present? %>
          <%= link_to(t('devise.profile.order'), myorders_path, class: "ml-4 inline-flex text-gray-700 bg-orange-200 border-0 py-2 px-6 focus:outline-none hover:bg-orange-500 hover:text-white rounded text-lg") %>
        <% end %>
      </div>
    </div>
  </div>
</section>